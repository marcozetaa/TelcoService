<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="TelcoServiceEJB">
        <description>Listed are all the class participating on the web-app</description>
        <class>it.polimi.telcoservice.TelcoServiceEJB.entities.User</class>
        <class>it.polimi.telcoservice.TelcoServiceEJB.entities.UserStatus</class>
        <class>it.polimi.telcoservice.TelcoServiceEJB.entities.Employee</class>
        <class>it.polimi.telcoservice.TelcoServiceEJB.entities.Order</class>
        <class>it.polimi.telcoservice.TelcoServiceEJB.entities.OrderStatus</class>
        <class>it.polimi.telcoservice.TelcoServiceEJB.entities.ServicePackage</class>
        <class>it.polimi.telcoservice.TelcoServiceEJB.entities.OptionalProduct</class>
        <class>it.polimi.telcoservice.TelcoServiceEJB.entities.MobilePhone</class>
        <class>it.polimi.telcoservice.TelcoServiceEJB.entities.MobileInternet</class>
        <class>it.polimi.telcoservice.TelcoServiceEJB.entities.FixedInternet</class>
        <class>it.polimi.telcoservice.TelcoServiceEJB.entities.FixedPhoneStatus</class>
        <class>it.polimi.telcoservice.TelcoServiceEJB.entities.Subscription</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/telco_service_db"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="MySQLServer_009!"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="create" />
        </properties>

    </persistence-unit>
</persistence>
